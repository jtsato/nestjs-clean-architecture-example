{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "yarn",
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "concurrency": 4,
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.gateway.ts"
  ],
  "jest": {
    "projectType": "custom",
    "config": {
      "testEnvironment": "node"
    },
    "enableFindRelatedTests": false
  },
  "warnings": {
    "slow": false
  },
  "timeoutMS": 60000,
  "reporters": ["html", "clear-text", "progress-append-only"]
}
